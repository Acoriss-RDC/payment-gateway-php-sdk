{
  "name": "acoriss/payment-gateway",
  "description": "PHP SDK for Acoriss Payment Gateway",
  "type": "library",
  "license": "MIT",
  "require": {
    "php": ">=8.1",
    "guzzlehttp/guzzle": "^7.8",
    "psr/log": "^3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "phpstan/phpstan": "^1.10",
    "friendsofphp/php-cs-fixer": "^3.64"
  },
  "autoload": {
    "psr-4": {
      "Acoriss\\PaymentGateway\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Acoriss\\PaymentGateway\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "analyse": "phpstan analyse",
    "format": "php-cs-fixer fix",
    "format-check": "php-cs-fixer fix --dry-run --diff"
  }
}